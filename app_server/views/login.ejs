<%- include ("_header") %>
<main class="container-fluid p-0">
    <section class="w-75 m-3 p-1 mx-auto rounded bg-white shadow-sm">
        <%- include ("_flash") %>
        <div class="m-auto p-3">
            <form accept="" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="email input"
                        placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                        required>
                </div>
                <div class="m-2 p-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                    <small class="text-muted">or</small>
                    <div><a class="small alert-link" href="/register">Register Now</a></div>
                </div> 
            </form>
        </div>
    </section>
</main>
<%- include ("_footer") %>